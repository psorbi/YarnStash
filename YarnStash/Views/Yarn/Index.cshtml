@model IEnumerable<YarnStash.Models.YarnModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.yarnManufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.yarnName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.yarnAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.yarnColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.yarnSize)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.yarnManufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.yarnName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.yarnAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.yarnColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.yarnSize)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
